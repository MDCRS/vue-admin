<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.SysAccountMapper">

    <resultMap id="BaseResultMap" type="com.example.entity.SysAccount">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="userId" column="user_id" jdbcType="BIGINT"/>
        <result property="totalAmount" column="total_amount" jdbcType="DECIMAL"/>
        <result property="balance" column="balance" jdbcType="DECIMAL"/>
        <result property="hostoryAmount" column="hostory_amount" jdbcType="DECIMAL"/>
        <result property="isDeleted" column="is_deleted" jdbcType="INTEGER"/>
        <result property="created" column="created" jdbcType="TIMESTAMP"/>
        <result property="updated" column="updated" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        ,user_id,total_amount,
        balance,hostory_amount,is_deleted,
        created,updated
    </sql>
    <select id="selectByRentUserId" resultType="com.example.entity.SysAccount">
        select *
        from sys_account
        where user_id = #{rentId}
    </select>
    <select id="selectByUserId" resultType="com.example.entity.SysAccount">
        select *
        from sys_account
        where user_id = #{userId}
    </select>
</mapper>
